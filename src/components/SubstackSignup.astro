---
interface Props {
  title?: string;
  description?: string;
  showTitle?: boolean;
}

const { 
  title = "Proof of Concept",
  description = "Get my newsletter every Sunday about design, technology, and entrepreneurship.",
  showTitle = true
} = Astro.props;
---

<div class="substack-signup">
  <div class="signup-header">
    {showTitle && <h2 class="signup-title">{title}</h2>}
    {description && <p class="signup-description">{description}</p>}
  </div>

  <form
    action="https://davidhoang.substack.com/api/v1/free"
    method="post"
    class="signup-form"
    id="substack-signup-form"
  >
    <div class="form-group">
      <label for="email" class="visually-hidden">Email address</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="email address"
        required
        class="email-input"
        aria-label="Email address"
        autocomplete="email"
      />
    </div>

    <div class="form-actions">
      <button type="submit" class="subscribe-button">
        Subscribe
      </button>
      <p class="signup-footnote">
        Free, no spam. Unsubscribe anytime.
      </p>
    </div>
  </form>
</div>

<style>
  .substack-signup {
    border-top: 1px solid var(--color-border);
    padding: 4rem 0 3rem 0;
    width: 100%;
    overflow: hidden;
  }

  .signup-header {
    margin-bottom: 2rem;
  }

  .signup-title {
    margin: 0 0 0.75rem 0;
    font-size: clamp(4rem, 14vw, 12rem);
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.04em;
    line-height: 0.95;
  }

  .signup-description {
    margin: 0;
    color: var(--color-muted);
    font-size: 1.15rem;
    line-height: 1.5;
  }

  .signup-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .form-group {
    width: 100%;
  }

  .email-input {
    width: 100%;
    padding: 0.25em 0;
    border: none;
    border-bottom: 3px solid var(--color-border);
    border-radius: 0;
    font-size: clamp(2rem, 7vw, 5rem);
    font-family: var(--font-primary);
    font-weight: 600;
    letter-spacing: -0.02em;
    background: transparent;
    color: var(--color-text);
    transition: border-color 0.3s ease;
    box-sizing: border-box;
  }

  .email-input:focus {
    outline: none;
    border-color: var(--color-link);
  }

  .email-input::placeholder {
    color: var(--color-muted);
    opacity: 0.25;
    font-weight: 600;
  }

  .form-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .subscribe-button {
    padding: 1rem 3rem;
    background: var(--color-text);
    color: var(--color-bg);
    border: none;
    border-radius: 999px;
    font-size: 1.15rem;
    font-weight: 600;
    font-family: var(--font-primary);
    cursor: pointer;
    white-space: nowrap;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    flex-shrink: 0;
  }

  .subscribe-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  [data-theme="dark"] .subscribe-button:hover {
    box-shadow: 0 6px 20px rgba(255, 255, 255, 0.1);
  }

  .subscribe-button:active {
    transform: translateY(0);
    box-shadow: none;
  }

  .subscribe-button:focus-visible {
    outline: 2px solid var(--color-link);
    outline-offset: 3px;
  }

  .signup-footnote {
    margin: 0;
    font-size: 0.85rem;
    color: var(--color-muted);
    opacity: 0.6;
  }

  /* Visually hidden but accessible to screen readers */
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  /* Compact variant for sidebar or inline use */
  .substack-signup.compact {
    padding: 1.5rem 0;
  }

  .substack-signup.compact .signup-title {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .substack-signup.compact .signup-description {
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }

  .substack-signup.compact .email-input {
    font-size: 1.5rem;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .substack-signup {
      padding: 3rem 0 2rem 0;
    }

    .form-actions {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .subscribe-button {
      width: 100%;
    }
  }

  /* Success and error states */
  .email-input.error {
    border-color: #dc2626;
  }

  .email-input.success {
    border-color: #16a34a;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .email-input,
    .subscribe-button {
      transition: none;
    }

    .subscribe-button:hover {
      transform: none;
    }
  }
</style>

<script>
  // Handle form submission with better UX
  const form = document.getElementById('substack-signup-form') as HTMLFormElement;
  
  if (form) {
    form.addEventListener('submit', async (e) => {
      const button = form.querySelector('.subscribe-button') as HTMLButtonElement;
      const input = form.querySelector('.email-input') as HTMLInputElement;
      
      if (button) {
        button.textContent = 'Subscribing...';
        button.disabled = true;
      }
      
      // The form will submit normally to Substack
      // This just provides visual feedback
    });
  }
</script>

