---
import Comments from './Comments.tsx';
import TestComments from './TestComments.tsx';

interface Props {
  roomId: string;
}

const { roomId } = Astro.props;
---

<div class="comments-wrapper">
  <Comments roomId={roomId} client:load />
</div>

<style>
  .comments-wrapper {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }
  
  .comments-wrapper :global(.comments-section) {
    max-width: none;
  }
  
  .comments-wrapper :global(.comments-section h3) {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: #333;
  }
  
  .comments-wrapper :global(.comments-container) {
    background: #f9f9f9;
    border-radius: 8px;
    padding: 1.5rem;
    min-height: 200px;
    border: 2px solid #e0e0e0;
  }
  
  .comments-wrapper :global(.comments-content) {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .comments-wrapper :global(.comments-composer) {
    background: white;
    border-radius: 8px;
    padding: 1rem;
    border: 1px solid #e0e0e0;
  }
  
  .comments-wrapper :global(.comments-threads) {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .comments-wrapper :global(.no-comments) {
    text-align: center;
    color: #666;
    font-style: italic;
    padding: 2rem;
    background: white;
    border-radius: 8px;
    border: 1px dashed #ccc;
  }
  
  .comments-wrapper :global(.comments-loading) {
    text-align: center;
    color: #666;
    padding: 2rem;
    background: white;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }
  
  .comments-wrapper :global(.comments-error) {
    background: #fee;
    border: 1px solid #fcc;
    border-radius: 8px;
    padding: 1rem;
    color: #c33;
  }
  
  .comments-wrapper :global(.comments-error details) {
    margin-top: 0.5rem;
  }
  
  .comments-wrapper :global(.comments-error summary) {
    cursor: pointer;
    font-weight: 600;
  }
  
  .comments-wrapper :global(.comments-error pre) {
    background: #f5f5f5;
    padding: 0.5rem;
    border-radius: 4px;
    font-size: 12px;
    margin-top: 0.5rem;
    overflow-x: auto;
  }
  
  .comments-wrapper :global(.comments-section) {
    border: 1px solid #ddd;
    padding: 1rem;
    margin: 1rem 0;
  }

  /* Liveblocks UI Customization */
  .comments-wrapper :global(.lb-thread) {
    background: white;
    border-radius: 8px;
    padding: 1rem;
  }

  .comments-wrapper :global(.lb-thread-composer) {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .comments-wrapper :global(.lb-thread-composer-input) {
    border: none;
    outline: none;
    width: 100%;
    font-family: inherit;
    font-size: 14px;
    line-height: 1.5;
    resize: vertical;
    min-height: 60px;
  }

  .comments-wrapper :global(.lb-thread-composer-input::placeholder) {
    color: #999;
  }

  .comments-wrapper :global(.lb-thread-composer-actions) {
    display: flex;
    justify-content: flex-end;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .comments-wrapper :global(.lb-button) {
    background: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .comments-wrapper :global(.lb-button:hover) {
    background: #0056b3;
  }

  .comments-wrapper :global(.lb-button:disabled) {
    background: #ccc;
    cursor: not-allowed;
  }

  .comments-wrapper :global(.lb-comment) {
    border: 1px solid #f0f0f0;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
    background: #fafafa;
  }

  .comments-wrapper :global(.lb-comment-header) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .comments-wrapper :global(.lb-comment-author) {
    font-weight: 600;
    color: #333;
  }

  .comments-wrapper :global(.lb-comment-time) {
    color: #666;
    font-size: 12px;
  }

  .comments-wrapper :global(.lb-comment-body) {
    color: #333;
    line-height: 1.5;
  }
</style>
