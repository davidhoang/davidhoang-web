---
import Giscus from './Giscus.tsx';

interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;

// Giscus configuration
const giscusConfig = {
  repo: "davidhoang/davidhoang-web",
  repoId: "R_kgDOKjQJHQ", // Get this from giscus.app setup
  category: "General",
  categoryId: "DIC_kwDOKjQJHc4CbQYH", // Get this from giscus.app setup
  mapping: "pathname",
  term: title,
  reactionsEnabled: "1",
  emitMetadata: "0",
  inputPosition: "bottom",
  theme: "preferred_color_scheme",
  lang: "en",
  loading: "lazy"
};
---

<div class="comments-wrapper">
  <div class="comments-section">
    <h3>Comments</h3>
    <div class="comments-container">
      <Giscus 
        repo={giscusConfig.repo}
        repoId={giscusConfig.repoId}
        category={giscusConfig.category}
        categoryId={giscusConfig.categoryId}
        mapping={giscusConfig.mapping}
        term={giscusConfig.term}
        reactionsEnabled={giscusConfig.reactionsEnabled}
        emitMetadata={giscusConfig.emitMetadata}
        inputPosition={giscusConfig.inputPosition}
        theme={giscusConfig.theme}
        lang={giscusConfig.lang}
        loading={giscusConfig.loading}
        client:load
      />
    </div>
  </div>
</div>

<style>
  .comments-wrapper {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }
  
  .comments-section {
    max-width: none;
  }
  
  .comments-section h3 {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: #333;
  }
  
  .comments-container {
    background: transparent;
    border-radius: 8px;
    padding: 0;
    min-height: 200px;
  }
  
  /* Giscus styling */
  .comments-container :global(.giscus) {
    margin-top: 1rem;
  }
  
  .comments-container :global(.giscus-frame) {
    border-radius: 8px;
  }
</style>
