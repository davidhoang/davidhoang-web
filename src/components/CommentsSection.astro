---
interface Props {
  slug: string;
}

const { slug } = Astro.props;
---

<div class="comments-wrapper">
  <div class="comments-section">
    <h3>Comments</h3>
    <section class="comments">
      <div 
        data-replit-comments
        data-post-id={slug}
        data-affiliate="https://replit.com/?ref=davidhoang"
        data-base-url="https://davidhoang-dot-com-comments.replit.app"
      ></div>
    </section>
    <script is:inline src="https://davidhoang-dot-com-comments.replit.app/embed.js"></script>
  </div>
</div>

<style>
  .comments-wrapper {
    margin-top: 3rem;
    padding-top: 2rem;
    padding-bottom: 3rem;
    border-top: 1px solid #e5e5e5;
  }
  
  .comments-section {
    max-width: none;
  }
  
  .comments-section h3 {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: #333;
  }
  
  .comments {
    background: transparent;
    border-radius: 8px;
    padding: 0;
    min-height: 200px;
  }
</style>
