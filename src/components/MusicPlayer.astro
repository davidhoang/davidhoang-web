---
import MusicPlayerComponent from './MusicPlayer.tsx';
---

<div data-astro-transition-scope="music-player">
  <MusicPlayerComponent client:idle />
</div>

<style is:global>
  /* Winamp Color Palette - Classic Winamp Colors (MORE GREEN!) */
  :root {
    --winamp-bg: #2a2a3a; /* Main dark blue-grey background (Winamp's signature color) */
    --winamp-button-bg: #3a3a4a; /* Dark blue-grey button background (not light grey!) */
    --winamp-dark: #4a4a5a; /* Medium blue-grey */
    --winamp-darker: #1a1a2a; /* Even darker blue-grey for depth */
    --winamp-light: #5a5a6a; /* Lighter blue-grey for hover states */
    --winamp-green: #00ff00; /* Bright green - PRIMARY accent color for EVERYTHING */
    --winamp-green-dark: #00cc00; /* Darker green */
    --winamp-green-track: #00ff00; /* GREEN slider tracks (not blue!) */
    --winamp-yellow: #ffcc00; /* Yellow/gold for seek bar and equalizer slider knobs */
    --winamp-text: #fff; /* White text on dark backgrounds */
    --winamp-text-light: #fff; /* White text */
    --winamp-text-dark: #000; /* Black text on light backgrounds */
    --winamp-border: #000; /* Black borders */
    --winamp-highlight: #ffffff; /* White highlights for 3D effect */
    --winamp-shadow: #000000; /* Black shadows */
    --winamp-titlebar-start: #000080; /* Title bar gradient start (dark blue) */
    --winamp-titlebar-end: #0000c0; /* Title bar gradient end (slightly lighter blue) */
    --winamp-selected: #808080; /* Grey for selected playlist items */
  }

  /* Main Winamp Container */
  .winamp-player {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    font-family: 'MS Sans Serif', 'Arial', sans-serif;
    font-size: 11px;
    user-select: none;
    transform: translateZ(0);
    will-change: transform;
  }

  .winamp-player.dragging {
    cursor: grabbing !important;
  }

  .winamp-player.dragging * {
    pointer-events: none;
  }

  .winamp-player.dragging .winamp-titlebar {
    pointer-events: auto;
  }

  .winamp-minimized {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
  }

  .winamp-toggle-btn {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
    padding: 4px 8px;
    font-size: 10px;
    font-weight: bold;
    cursor: pointer;
    color: var(--winamp-text);
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-toggle-btn:hover {
    background: var(--winamp-light);
  }

  .winamp-toggle-btn:active {
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.5);
    border-top: 1px solid var(--winamp-shadow);
    border-left: 1px solid var(--winamp-shadow);
  }

  /* Main Player Window */
  .winamp-main {
    width: 275px;
    background: var(--winamp-bg);
    border: 2px solid var(--winamp-border);
    border-bottom: none;
    box-shadow: 
      inset -1px -1px 0 var(--winamp-shadow),
      inset 1px 1px 0 var(--winamp-highlight),
      2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .winamp-titlebar {
    background: linear-gradient(to bottom, var(--winamp-titlebar-start), var(--winamp-titlebar-end));
    color: var(--winamp-text-light);
    padding: 2px 4px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 10px;
    font-weight: bold;
    cursor: move;
    border-bottom: 1px solid var(--winamp-border);
  }

  .winamp-logo {
    font-size: 8px;
    letter-spacing: 1px;
  }

  .winamp-title {
    flex: 1;
    text-align: center;
  }

  .winamp-window-controls {
    display: flex;
    gap: 2px;
  }

  .winamp-btn-minimize,
  .winamp-btn-close {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    width: 16px;
    height: 14px;
    font-size: 12px;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    line-height: 1;
    color: var(--winamp-text);
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-btn-minimize:hover,
  .winamp-btn-close:hover {
    background: var(--winamp-light);
  }

  .winamp-btn-close:hover {
    background: #ff0000;
    color: white;
  }

  /* Display Area */
  .winamp-display {
    background: #000;
    padding: 8px;
    border: 2px inset var(--winamp-dark);
    margin: 4px;
    min-height: 150px;
  }

  /* Enhanced Time Display - LED/Segment Style */
  .winamp-time-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6px;
    background: var(--winamp-darker);
    padding: 4px 8px;
    border: 1px inset var(--winamp-dark);
  }

  .winamp-time-display {
    font-family: 'Courier New', monospace;
    font-size: 20px;
    color: var(--winamp-green);
    text-shadow:
      0 0 8px var(--winamp-green),
      0 0 12px var(--winamp-green),
      0 0 4px rgba(0, 255, 0, 0.8);
    font-weight: bold;
    letter-spacing: 3px;
    display: flex;
    gap: 2px;
  }

  .winamp-digit {
    display: inline-block;
    min-width: 12px;
    text-align: center;
    background: rgba(0, 20, 0, 0.3);
    padding: 2px 4px;
    border-radius: 2px;
  }

  .winamp-digit.colon {
    min-width: 6px;
    background: transparent;
  }

  .winamp-time-remaining {
    font-family: 'Courier New', monospace;
    font-size: 12px;
    color: var(--winamp-green-dark);
    text-shadow: 0 0 4px var(--winamp-green-dark);
    font-weight: bold;
  }

  /* Position/Seek Slider */
  .winamp-seek-container {
    position: relative;
    height: 10px;
    background: var(--winamp-darker);
    border: 1px inset var(--winamp-dark);
    margin-bottom: 6px;
    cursor: pointer;
  }

  .winamp-seek-slider {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
    z-index: 2;
  }

  .winamp-seek-progress {
    position: absolute;
    height: 100%;
    background: var(--winamp-yellow);
    box-shadow: 0 0 4px var(--winamp-yellow);
    transition: width 0.1s linear;
    pointer-events: none;
  }

  .winamp-seek-slider:disabled + .winamp-seek-progress {
    background: var(--winamp-dark);
    box-shadow: none;
  }

  /* Track Info with Marquee */
  .winamp-track-info-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6px;
    height: 16px;
  }

  .winamp-track-info {
    flex: 1;
    color: var(--winamp-green);
    font-size: 9px;
    overflow: hidden;
    position: relative;
    background: rgba(0, 20, 0, 0.2);
    padding: 2px 4px;
    border: 1px solid rgba(0, 255, 0, 0.2);
  }

  .winamp-track-scrolling {
    display: inline-block;
    white-space: nowrap;
    animation: marquee 15s linear infinite;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .winamp-track-info:hover .winamp-track-scrolling {
    animation-play-state: paused;
  }

  .winamp-bitrate-display {
    display: flex;
    gap: 6px;
    color: var(--winamp-green);
    font-size: 8px;
    font-family: 'Courier New', monospace;
    background: rgba(0, 20, 0, 0.3);
    padding: 2px 6px;
    border: 1px solid rgba(0, 255, 0, 0.2);
  }

  .winamp-bitrate::after {
    content: 'kbps';
    margin-left: 2px;
  }

  .winamp-khz::after {
    content: 'kHz';
    margin-left: 2px;
  }

  .winamp-spectrum {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    height: 30px;
    margin-bottom: 6px;
  }

  .winamp-spectrum-bar {
    flex: 1;
    min-height: 2px;
    background: var(--winamp-green);
    transition: height 0.1s ease;
    border-radius: 1px;
  }

  /* Volume and Balance Controls */
  .winamp-volume-balance-container {
    display: flex;
    gap: 12px;
    margin-bottom: 6px;
    padding: 4px;
    background: var(--winamp-darker);
    border: 1px inset var(--winamp-dark);
  }

  .winamp-volume-control,
  .winamp-balance-control {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .winamp-label {
    font-size: 8px;
    color: var(--winamp-green);
    font-weight: bold;
    min-width: 24px;
  }

  .winamp-volume-slider {
    width: 80px;
    height: 8px;
    background: transparent;
    cursor: pointer;
  }

  .winamp-volume-slider::-webkit-slider-track {
    background: var(--winamp-green-track);
    border: 1px solid var(--winamp-border);
    height: 6px;
    border-radius: 0;
  }

  .winamp-volume-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 8px;
    height: 14px;
    background: var(--winamp-yellow);
    border: 1px solid var(--winamp-border);
    cursor: pointer;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-volume-slider::-moz-range-track {
    background: var(--winamp-green-track);
    border: 1px solid var(--winamp-border);
    height: 6px;
    border-radius: 0;
  }

  .winamp-volume-slider::-moz-range-thumb {
    width: 8px;
    height: 14px;
    background: var(--winamp-yellow);
    border: 1px solid var(--winamp-border);
    cursor: pointer;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
    border-radius: 0;
  }

  .winamp-balance-slider {
    width: 80px;
    height: 8px;
    background: transparent;
    cursor: pointer;
  }

  .winamp-balance-slider::-webkit-slider-track {
    background: var(--winamp-green-track);
    border: 1px solid var(--winamp-border);
    height: 6px;
    border-radius: 0;
  }

  .winamp-balance-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 8px;
    height: 14px;
    background: var(--winamp-yellow);
    border: 1px solid var(--winamp-border);
    cursor: pointer;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-balance-slider::-moz-range-track {
    background: var(--winamp-green-track);
    border: 1px solid var(--winamp-border);
    height: 6px;
    border-radius: 0;
  }

  .winamp-balance-slider::-moz-range-thumb {
    width: 8px;
    height: 14px;
    background: var(--winamp-yellow);
    border: 1px solid var(--winamp-border);
    cursor: pointer;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-volume-display,
  .winamp-balance-display {
    font-size: 8px;
    color: var(--winamp-green);
    font-family: 'Courier New', monospace;
    min-width: 20px;
    text-align: center;
  }

  .winamp-mode-buttons {
    display: flex;
    gap: 4px;
    margin-bottom: 4px;
  }

  .winamp-mode-btn {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    color: var(--winamp-text);
    padding: 2px 6px;
    font-size: 8px;
    cursor: pointer;
    text-transform: lowercase;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-mode-btn.active {
    background: var(--winamp-green);
    color: var(--winamp-text-dark);
    font-weight: bold;
  }

  .winamp-toggle-buttons {
    display: flex;
    gap: 4px;
  }

  .winamp-toggle-btn {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    color: var(--winamp-text);
    padding: 2px 8px;
    font-size: 9px;
    font-weight: bold;
    cursor: pointer;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-toggle-btn.active {
    background: var(--winamp-green);
    color: var(--winamp-text-dark);
    font-weight: bold;
  }

  /* Controls */
  .winamp-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3px;
    padding: 6px;
    background: var(--winamp-bg);
    border-top: 1px solid var(--winamp-shadow);
  }

  .winamp-control-btn {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
    padding: 6px 10px;
    font-size: 12px;
    font-weight: bold;
    cursor: pointer;
    min-width: 28px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--winamp-text);
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
    transition: all 0.05s ease;
  }

  .winamp-control-btn:hover:not(:disabled) {
    background: var(--winamp-light);
  }

  .winamp-control-btn:active:not(:disabled) {
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.5);
    border-top: 1px solid var(--winamp-shadow);
    border-left: 1px solid var(--winamp-shadow);
    transform: translateY(1px);
  }

  .winamp-control-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .winamp-control-btn.active {
    background: var(--winamp-green);
    color: var(--winamp-text-dark);
    font-weight: bold;
    box-shadow:
      inset 0 0 4px rgba(0, 255, 0, 0.6),
      inset -1px -1px 0 var(--winamp-shadow);
  }

  /* Equalizer Window */
  .winamp-equalizer {
    width: 275px;
    background: var(--winamp-bg);
    border: 2px solid var(--winamp-border);
    border-top: none;
    box-shadow: 
      inset -1px -1px 0 var(--winamp-shadow),
      inset 1px 1px 0 var(--winamp-highlight),
      2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .winamp-eq-controls {
    display: flex;
    gap: 4px;
    padding: 4px;
    background: var(--winamp-bg);
  }

  .winamp-eq-btn {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
    padding: 2px 8px;
    font-size: 9px;
    font-weight: bold;
    cursor: pointer;
    color: var(--winamp-text);
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-eq-btn:hover {
    background: var(--winamp-light);
  }

  .winamp-eq-btn:active {
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.5);
    border-top: 1px solid var(--winamp-shadow);
    border-left: 1px solid var(--winamp-shadow);
  }

  .winamp-eq-btn.active {
    background: var(--winamp-green);
    color: var(--winamp-text-dark);
    font-weight: bold;
  }

  .winamp-eq-sliders {
    display: flex;
    padding: 8px;
    gap: 8px;
  }

  .winamp-eq-scale {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-size: 8px;
    color: var(--winamp-text);
    padding-right: 4px;
    height: 120px;
  }

  .winamp-eq-scale-label {
    text-align: right;
  }

  .winamp-eq-slider-group {
    display: flex;
    gap: 4px;
    flex: 1;
  }

  .winamp-eq-slider-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .winamp-eq-slider-container label {
    font-size: 8px;
    color: var(--winamp-text);
    font-weight: bold;
  }

  .winamp-eq-slider {
    -webkit-appearance: slider-vertical;
    writing-mode: bt-lr;
    width: 20px;
    height: 100px;
    background: transparent;
    cursor: pointer;
  }

  .winamp-eq-slider::-webkit-slider-track {
    background: var(--winamp-green-track);
    border: 1px solid var(--winamp-border);
    width: 8px;
    border-radius: 0;
  }

  .winamp-eq-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 16px;
    height: 12px;
    background: var(--winamp-yellow);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
    cursor: pointer;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-eq-slider::-moz-range-track {
    background: var(--winamp-green-track);
    border: 1px solid var(--winamp-border);
    width: 8px;
    border-radius: 0;
  }

  .winamp-eq-slider::-moz-range-thumb {
    width: 16px;
    height: 12px;
    background: var(--winamp-yellow);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
    cursor: pointer;
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  /* Playlist Window */
  .winamp-playlist {
    width: 275px;
    background: var(--winamp-bg);
    border: 2px solid var(--winamp-border);
    border-top: none;
    box-shadow: 
      inset -1px -1px 0 var(--winamp-shadow),
      inset 1px 1px 0 var(--winamp-highlight),
      2px 2px 4px rgba(0, 0, 0, 0.3);
    max-height: 300px;
    display: flex;
    flex-direction: column;
  }

  .winamp-playlist-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
  }

  .winamp-playlist-tracks {
    flex: 1;
    overflow-y: auto;
    padding: 2px;
    background: #fff;
    border: 1px inset var(--winamp-dark);
    margin: 4px;
    font-size: 10px;
    color: #000;
    max-height: 200px;
  }

  .winamp-playlist-track {
    padding: 2px 4px;
    cursor: pointer;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .winamp-playlist-track:hover {
    background: var(--winamp-light);
  }

  .winamp-playlist-track.active {
    background: var(--winamp-selected);
    color: var(--winamp-text-light);
  }

  .winamp-playlist-controls {
    display: flex;
    gap: 4px;
    padding: 4px;
    background: var(--winamp-bg);
  }

  .winamp-playlist-btn {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
    padding: 2px 6px;
    font-size: 8px;
    font-weight: bold;
    cursor: pointer;
    color: var(--winamp-text);
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-playlist-btn:hover {
    background: var(--winamp-light);
  }

  .winamp-playlist-btn:active {
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.5);
    border-top: 1px solid var(--winamp-shadow);
    border-left: 1px solid var(--winamp-shadow);
  }

  .winamp-playlist-summary {
    padding: 2px 8px;
    font-size: 9px;
    color: var(--winamp-text);
    background: var(--winamp-bg);
    border-top: 1px solid var(--winamp-shadow);
    text-align: center;
  }

  .winamp-playlist-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 4px;
    background: var(--winamp-bg);
    border-top: 1px solid var(--winamp-shadow);
  }

  .winamp-mini-controls {
    display: flex;
    gap: 2px;
  }

  .winamp-mini-btn {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
    padding: 2px 4px;
    font-size: 8px;
    font-weight: bold;
    cursor: pointer;
    min-width: 18px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--winamp-text);
    box-shadow: inset -1px -1px 0 var(--winamp-shadow);
  }

  .winamp-mini-btn:hover {
    background: var(--winamp-light);
  }

  .winamp-mini-btn:active {
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.5);
    border-top: 1px solid var(--winamp-shadow);
    border-left: 1px solid var(--winamp-shadow);
  }

  .winamp-mini-btn.active {
    background: var(--winamp-green);
    color: var(--winamp-text-dark);
    font-weight: bold;
  }

  /* Scrollbar styling for playlist */
  .winamp-playlist-tracks::-webkit-scrollbar {
    width: 16px;
  }

  .winamp-playlist-tracks::-webkit-scrollbar-track {
    background: var(--winamp-button-bg);
    border: 1px solid var(--winamp-border);
  }

  .winamp-playlist-tracks::-webkit-scrollbar-thumb {
    background: var(--winamp-dark);
    border: 1px solid var(--winamp-border);
    border-top: 1px solid var(--winamp-highlight);
    border-left: 1px solid var(--winamp-highlight);
  }

  .winamp-playlist-tracks::-webkit-scrollbar-thumb:hover {
    background: var(--winamp-darker);
  }

  /* Ensure player stays in place during transitions */
  [data-astro-transition-scope="music-player"] {
    position: fixed !important;
    z-index: 9999 !important;
    pointer-events: auto !important;
  }

  /* Prevent Astro view transitions from affecting the player */
  .winamp-player,
  .winamp-player * {
    view-transition-name: none !important;
  }

  @media (max-width: 768px) {
    .winamp-main,
    .winamp-equalizer,
    .winamp-playlist {
      width: 100%;
      max-width: 320px;
    }

    .winamp-controls {
      flex-wrap: wrap;
      gap: 2px;
    }

    .winamp-control-btn {
