<style>
  .sidebar {
    position: sticky;
    top: calc(var(--nav-height) + 2rem);
    padding: 1.5rem;
    width: 250px;
    background-color: var(--color-sidebar-bg);
    border-radius: 8px;
    height: fit-content;
  }

  .sidebar-section {
    margin-bottom: 2rem;
  }

  .sidebar-section h2 {
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .sidebar-section p {
    font-size: 0.9rem;
    color: var(--color-muted);
    margin-bottom: 1rem;
  }

  .category-list,
  .social-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .category-list li,
  .social-links li {
    margin-bottom: 0.5rem;
  }

  .category-list a,
  .social-links a {
    color: var(--color-link);
    text-decoration: none;
    font-size: 0.9rem;
    border-bottom: none;
  }

  .category-list a:hover,
  .social-links a:hover {
    text-decoration: underline;
  }

  .sidebar-button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: var(--color-text);
    color: var(--color-bg);
    text-decoration: none;
    border-radius: 4px;
    font-size: 0.9rem;
    transition: opacity 0.2s;
    border-bottom: none;
  }

  .sidebar-button:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .sidebar {
      position: static;
      margin-top: 2rem;
    }
  }

  @media (max-width: 480px) {
    .sidebar {
      width: 100%;
      padding: 1rem;
      margin: 1rem 0;
    }
  }

  .theme-image {
    width: 100%;
    aspect-ratio: 3/4;
    background-image: url('/images/img-dh.png');
    background-size: cover;
    background-position: center;
    border-radius: 8px;
    transition: background-image 0.3s ease;
  }

  :global([data-theme="dark"]) .theme-image {
    background-image: url('/images/img-dh-dark.png');
  }
</style> 