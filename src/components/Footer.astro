<style>
  footer {
    opacity: 1;
    padding: 2rem 0 4rem 0;
    font-size: 1rem;
    min-height: 100px;
    width: 100%;
    border-top: 1px solid var(--color-border);
  }

  /* Ensure footer container matches main content container constraints */
  footer .container {
    width: 100%;
    max-width: 1200px;
    margin-inline: auto;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  /* Large breakpoint - 1920px container */
  @media (min-width: 1920px) {
    footer .container {
      max-width: 1920px;
    }
  }

  /* Mobile breakpoint - 480px */
  @media (max-width: 480px) {
    footer .container {
      padding: 0 1.0rem;
      max-width: 100%;
      width: 100%;
      margin: 0 auto;
      box-sizing: border-box;
    }
  }

  /* Footer links should not use the global "fancy underline" treatment */
  a {
    border-bottom: none;
    text-decoration: none;
  }

  a::after {
    display: none;
  }

  a:hover {
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .footer-section-email {
    padding: 24px 0px;
    margin-bottom: 24px;
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    font-weight: 600;
  }

  .footer-section-email a {
    font-size: 1.4em;
  }

  .footer-section-copyright {
    margin-top: 2rem;
    font-size: 0.9rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .footer-col h4 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    margin-top: 0;
    letter-spacing: 0.05em;
    color: var(--color-text);
    opacity: 0.9;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-col li {
    margin-bottom: 0.25rem;
    font-size: 0.95rem;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .footer-col h4 {
      font-size: 0.95rem;
      margin-bottom: 0.4rem;
    }

    .footer-col li {
      font-size: 0.9rem;
      margin-bottom: 0.2rem;
    }
  }

  /* Extra-large breakpoint - 1920px - increased typography */
  @media (min-width: 1920px) {
    footer {
      font-size: 1.2rem;
    }

    .footer-section-email {
      font-size: clamp(1.2rem, 2.5vw, 1.5rem);
    }

    .footer-section-email a {
      font-size: 1.4em;
    }

    .footer-section-copyright {
      font-size: 1.1rem;
    }

    .footer-col h4 {
      font-size: 1.4rem;
    }

    .footer-col li {
      font-size: 1.2rem;
    }
  }
</style>

