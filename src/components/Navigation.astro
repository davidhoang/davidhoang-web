    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: inherit;
    opacity: 1.0;
    pointer-events: none;
  }

  .particle-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 200px;
    pointer-events: none;
    z-index: 999;
  }

  nav {
    position: fixed;
    top: 24px;
    left: 50%;
    height: var(--nav-height);
    z-index: 1000;
    background: var(--color-nav-bg, #ffffff);
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    border-radius: 36px;
    width: auto;
    min-width: 480px;
    max-width: 480px;
    padding: 24px 32px;
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-default);
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--color-nav-text, #000);
    box-sizing: border-box;
    /* Sentient nav: CSS custom properties for JS-controlled motion */
    --nav-float-x: 0px;
    --nav-float-y: 0px;
    --nav-tilt: 0deg;
    --nav-glow-opacity: 0;
    --nav-glow-color: var(--color-link);
    /* Base transform - all motion flows through this */
    transform: translateX(-50%)
               translateY(var(--nav-float-y))
               translateX(var(--nav-float-x))
               rotate(var(--nav-tilt));
    /* Smooth transitions for all properties */
    transition:
      transform 0.4s cubic-bezier(0.33, 1, 0.68, 1),
      min-width 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      max-width 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      padding 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      border-color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
