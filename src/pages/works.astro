---
import MainLayout from '../layouts/MainLayout.astro';

// Page metadata
const pageDescription = "A collection of my work and projects.";
const ogImage = "/images/works/works-inspirato.webp";

// Work items - you can add more items here
const works = [
  {
    id: 'inspirato',
    image: '/images/works/works-inspirato.webp',
    alt: 'Inspirato work showcase',
    context: 'Inspirato | Black Pixel (2015)'
  },
  {
    id: 'twitter-camera',
    image: '/images/works/works-twitter-camera.webp',
    alt: 'Twitter Camera work showcase',
    context: 'Twitter Camera | Twitter'
  }
];
---

<MainLayout title="Works" description={pageDescription} ogImage={ogImage}>
  <div class="works-container">
    <div class="works-inner">
      <div class="works-grid">
        {works.map((work) => (
          <div class="work-item">
            <div class="work-image-container">
              <div class="work-image-wrapper">
                <img 
                  src={work.image} 
                  alt={work.alt}
                  loading="lazy"
                />
              </div>
              <div class="work-context">
                {work.context}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .works-container {
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding: 2rem clamp(1rem, 4vw, 4rem);
    box-sizing: border-box;
  }

  .works-inner {
    width: 100%;
    max-width: var(--container-wide-width, 1400px);
    margin: 0 auto;
  }

  .works-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }

  .work-item {
    width: 100%;
  }

  .work-image-container {
    width: 100%;
    padding: clamp(1rem, 3vw, 2rem);
    padding-bottom: clamp(1.5rem, 4vw, 3rem);
    background: #F1F2F6;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .work-image-wrapper {
    width: 100%;
    aspect-ratio: 1920 / 1080;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .work-image-container img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: contain;
  }

  .work-context {
    text-align: center;
    color: var(--color-text);
    font-size: clamp(0.875rem, 1.5vw, 1rem);
    font-weight: 500;
    white-space: nowrap;
    margin-top: clamp(1rem, 2vw, 1.5rem);
    width: 100%;
  }

  /* Desktop Large (1440px+) */
  @media (min-width: 1440px) {
    .works-container {
      padding: 3rem clamp(2rem, 5vw, 6rem);
    }

    .works-inner {
      max-width: 1600px;
    }

    .works-grid {
      gap: 1rem;
    }

    .work-image-container {
      padding: clamp(2rem, 4vw, 3rem);
      padding-bottom: clamp(2.5rem, 5vw, 3.5rem);
    }
  }

  /* Desktop Extra Large (1920px+) */
  @media (min-width: 1920px) {
    .works-container {
      padding: 4rem clamp(3rem, 6vw, 8rem);
    }

    .works-inner {
      max-width: 1920px;
    }

    .works-grid {
      gap: 1rem;
    }

    .work-image-container {
      padding: clamp(2.5rem, 5vw, 4rem);
      padding-bottom: clamp(3rem, 6vw, 4.5rem);
    }
  }

  @media (max-width: 768px) {
    .works-container {
      padding: 1.5rem 1rem;
    }

    .works-grid {
      gap: 1rem;
    }

    .work-image-container {
      padding: 1rem;
      padding-bottom: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .works-container {
      padding: 1rem 0.75rem;
    }

    .works-grid {
      gap: 1rem;
    }

    .work-image-container {
      padding: 0.75rem;
      padding-bottom: 1.25rem;
    }
  }
</style>

