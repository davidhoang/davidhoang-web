---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import SidebarWriting from '../../components/SidebarWriting.astro';
import PageHeader from '../../components/PageHeader.astro';

const allPosts = await getCollection('writing');
// Filter out drafts in production, but show them in development
const posts = (import.meta.env.PROD 
  ? allPosts.filter((post) => !post.data.draft)
  : allPosts
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Page metadata
const pageDescription = "Essays and articles on design, engineering, AI, and entrepreneurship. Exploring the future of software design and building better products.";
const ogImage = "/images/highlights/img-highlights-proof-of-concept.webp";
---

<MainLayout title="Writing | David Hoang" description={pageDescription} ogImage={ogImage}>
  <PageHeader
    title="Writing"
    image="/images/highlights/img-highlights-proof-of-concept.webp"
    alt="Writing"
  />
  <div class="container">
    <div class="content-grid">
      <div class="posts-list">
        <ul class="posts-list">
          {posts.map(post => (
            <li>
              <a href={`/writing/${post.slug}`} class="post-link">
                <div class="post-row">
                  <span class="post-title">{post.data.title}</span>
                  <time datetime={post.data.pubDate.toISOString()}>
                    {new Date(post.data.pubDate).toLocaleDateString()}
                  </time>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </div>
      <SidebarWriting />
    </div>
  </div>
  </div>
</MainLayout>

<style>

  .content-grid {
    display: grid;
    grid-template-columns: 3fr 1fr;
    gap: 3rem;
  }

  .posts-list {
    list-style: none;
    padding: 0;
  }

  .posts-list li {
    margin-bottom: 0.75rem;
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
    border-bottom: none !important;
  }

  .post-link::after {
    display: none !important;
  }

  .post-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .post-title {
    position: relative;
    border-bottom: 1px dotted transparent;
    transition: border-bottom-color 0.3s ease;
  }

  .post-link:hover .post-title {
    border-bottom-color: var(--color-link-hover, #0066cc);
  }

  .posts-list h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  time {
    color: #444;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 