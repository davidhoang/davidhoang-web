---
import MainLayout from '../layouts/MainLayout.astro';

// Get current date for the last updated timestamp
const currentDate = new Date().toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<MainLayout title="Now | David Hoang">
  <div class="container">
    <div class="hero-title">
      <h1>Now</h1>
    </div>
    <div class="now-content">
      <h1>Now</h1>
      <p>Last updated: Friday, August 1, 2024. Learn more about <a href="https://nownownow.com/" target="_blank">Now pages</a></p>
      <div class="now-section">Add an image here</div>
      <div class="now-section">
        <h2>What I'm currently up to</h2>
        <ul>
            <li>I started at Atlassian as the Head of Design for AI</li>
            <li>Writing lazy reviews on Letterboxd</li>
            <li>Aspiring to get the Juggernaught kill streak on Call of Duty</li>
            <li>Writing a newsletter called Proof of Concept focused on creativity and experimentation</li>
            <li>Getting back into cycling with my Salsa bike</li>
        </ul>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .now-content {
    max-width: 700px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .subtitle {
    color: #666;
    font-size: 1.2rem;
    margin-bottom: 3rem;
  }

  .now-section {
    margin-bottom: 3rem;
  }

  .now-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .now-section ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .now-section li {
    margin-bottom: 0.5rem;
    margin-left: 2rem;
    font-size: 1.1rem;
    list-style-type: disc;
  }

  .now-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
    font-size: 0.9rem;
    color: #666;
  }

  .now-page-info {
    margin-top: 0.5rem;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .now-content {
      padding: 1rem;
    }

    .subtitle {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .now-section {
      margin-bottom: 2rem;
    }
  }
</style> 