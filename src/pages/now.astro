---
import MainLayout from '../layouts/MainLayout.astro';
import imgDavidSydney from '../assets/images/img-david-sydney.jpeg';
import imgDavidNow from '../assets/images/img-david-now.jpeg';
import imgDavidHawaii from '../assets/images/img-david-hawaii.jpeg';

// Get current date for the last updated timestamp
const currentDate = new Date().toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Get page name from the URL path
const pageName = Astro.url.pathname
  .split('/')
  .filter(Boolean)
  .pop() || 'Home';
const pageTitle = pageName.charAt(0).toUpperCase() + pageName.slice(1);
---

<MainLayout title="Now | David Hoang">
  <div class="container">
    <div class="now-image-container">
      <img class="now-image" src={imgDavidNow.src} alt="David Hoang portrait photo, current headshot" />
      <div class="image-overlay">
        <h1 class="overlay-text">{pageTitle}</h1>
      </div>
    </div>
    <div class="now-content">
      <p>Last updated: Thursday, November 27, 2025. Learn more about <a href="https://nownownow.com/" target="_blank">Now pages</a></p>
      <div class="now-section">
        <div class="now-grid">
          <div class="now-grid-item">
            <img src={imgDavidSydney.src} alt="David Hoang standing in Sydney, Australia with city skyline in the background" />
          </div>
          <div class="now-grid-item">
            <img src={imgDavidNow.src} alt="David Hoang portrait photo, current headshot" />
          </div>
          <div class="now-grid-item">
            <img src={imgDavidHawaii.src} alt="David Hoang in Hawaii, casual outdoor setting" />
          </div>
        </div>
      </div>
      <div class="now-section">
        <h2>What I'm currently up to</h2>
        <ul role="list" aria-label="Current activities and projects">
            <li>Working on AI at Atlassian</li>
            <li><a href="https://blog.davidhoang.com/2025/06/10/the-cat-distribution-system-at-work/" target="_blank" rel="noopener noreferrer">Taking care of a new kitten</a></li>
            <li>Vibe coding <a href="https://tapestry.design" target="_blank" rel="noopener noreferrer">Tapestry</a></li>
            <li>Writing lazy reviews on <a href="https://letterboxd.com/davidhoang/" target="_blank" rel="noopener noreferrer">Letterboxd</a></li>
            <li>Aspiring to get the Juggernaught kill streak on Call of Duty</li>
            <li>Writing a newsletter called <a href="https://www.proofofconcept.pub/" target="_blank" rel="noopener noreferrer">Proof of Concept</a> focused on creativity and experimentation</li>
            <li>Getting back into cycling with my <a href="https://www.instagram.com/p/Cq0-_0Jv-0/" target="_blank" rel="noopener noreferrer">Salsa bike</a></li>
        </ul>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .now-image-container {
    width: 100vw;
    max-width: 100vw;
    aspect-ratio: 16 / 9;
    margin-top: calc(0px - clamp(1rem, 3vw, 2rem));
    margin-bottom: 2rem;
    margin-left: calc(50% - 50vw - clamp(1rem, 3vw, 2rem));
    margin-right: calc(50% - 50vw - clamp(1rem, 3vw, 2rem));
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .now-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    display: block;
    flex-shrink: 0;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
  }

  .overlay-text {
    color: white;
    font-size: clamp(3rem, 8vw, 8rem);
    font-weight: 700;
    text-align: center;
    margin: 0;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
    letter-spacing: -0.02em;
  }

  .now-content {
    max-width: 700px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .subtitle {
    color: var(--color-muted);
    font-size: 1.2rem;
    margin-bottom: 3rem;
  }

  .now-section {
    margin-bottom: 3rem;
  }

  .now-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .now-section ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .now-section li {
    margin-bottom: 0.5rem;
    margin-left: 2rem;
    font-size: 1.1rem;
    list-style-type: disc;
  }

  .now-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 2rem 0;
  }

  .now-grid-item img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .now-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    font-size: 0.9rem;
    color: var(--color-muted);
  }

  .now-page-info {
    margin-top: 0.5rem;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .now-content {
      padding: 1rem;
    }

    .subtitle {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .now-section {
      margin-bottom: 2rem;
    }

    .now-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style> 