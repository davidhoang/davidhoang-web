---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import PeopleAvatars from '../../components/PeopleAvatars.astro';
import peopleData from '../../data/people.json';

export async function getStaticPaths() {
  const workItems = await getCollection('work');
  return workItems.map((item) => {
    return {
      params: { slug: item.slug },
      props: { item }
    };
  });
}

const { item } = Astro.props;
if (!item) {
  throw new Error('Work item is undefined');
}

const { Content } = await item.render();

// Resolve people data
type Person = { name: string; image: string; url?: string; linkedin?: string };

function resolvePeople(peopleData: { people: Array<{ id: string; name: string; image: string; url?: string; linkedin?: string }> }, peopleField: any): Person[] {
  if (!peopleField || !Array.isArray(peopleField) || peopleField.length === 0) {
    return [];
  }

  const peopleMap = new Map<string, { name: string; image: string; url?: string; linkedin?: string }>(
    peopleData.people.map((p) => [p.id, { name: p.name, image: p.image, url: p.url, linkedin: p.linkedin }])
  );
  const resolved: Person[] = [];

  for (const personRef of peopleField) {
    if (typeof personRef === 'string') {
      // It's a person ID, look it up
      const person = peopleMap.get(personRef);
      if (person && person.name && person.image) {
        resolved.push(person);
      }
    } else if (typeof personRef === 'object' && personRef !== null && 'name' in personRef && 'image' in personRef) {
      // It's a full person object
      const person = personRef as Person;
      if (person.name && person.image) {
        resolved.push(person);
      }
    }
  }

  return resolved;
}

const resolvedPeople = resolvePeople(peopleData, item.data.people);
---

<MainLayout title={`${item.data.name} | Work | David Hoang`}>
  <article class="work-detail">
    <div class="container">
      <div class="work-header">
        <a href="/work" class="back-link">‚Üê Back to Work</a>
        <div class="work-cover">
          <img src={item.data.coverImage} alt={item.data.name} />
        </div>
        <h1>{item.data.name}</h1>
        <div class="work-meta-header">
          <span class="work-year">{item.data.year}</span>
          {resolvedPeople.length > 0 && (
            <div class="people-section">
              <span class="worked-with-label">Worked with:</span>
              <div class="people-avatars-container">
                <PeopleAvatars people={resolvedPeople} />
              </div>
            </div>
          )}
          {(() => {
            const workedWith = !resolvedPeople.length && item.data.workedWith && item.data.workedWith.length > 0 ? item.data.workedWith : null;
            return workedWith ? (
            <div class="worked-with">
              <span class="worked-with-label">Worked with:</span>{' '}
                {workedWith.map((collaborator: { name: string; url?: string }, index: number) => (
                <>
                  {collaborator.url ? (
                    <a href={collaborator.url} target="_blank" rel="noopener noreferrer" class="collaborator-link">
                      {collaborator.name}
                    </a>
                  ) : (
                    <span class="collaborator-name">{collaborator.name}</span>
                  )}
                    {index < workedWith.length - 1 && ', '}
                </>
              ))}
            </div>
            ) : null;
          })()}
        </div>
      </div>

      <div class="work-summary-header">
        <p class="work-summary">{item.data.summary}</p>
      </div>

      <div class="work-content">
        <Content />
      </div>
    </div>
  </article>
</MainLayout>

<style>
