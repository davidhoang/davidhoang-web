    font-size: 1.1rem;
  }

  .collaborator-link:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  .work-summary-header {
    margin-bottom: 3rem;
    padding: 2rem;
    border-radius: 12px;
    background: var(--color-sidebar-bg);
    border-left: 4px solid var(--color-border);
