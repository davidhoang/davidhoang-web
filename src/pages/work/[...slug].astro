    margin: 0.5rem 0;
  }

  .work-content :global(a) {
    color: var(--color-link);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .work-content :global(a:hover) {
    color: var(--color-link-hover);
  }

  .work-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .work-content :global(blockquote) {
    border-left: 4px solid var(--color-border);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-muted);
  }

  .work-content :global(iframe) {
    width: 100%;
    border-radius: 8px;
  }

  .work-content :global(div[style*="padding-bottom: 56.25%"]) {
    margin: 2.5rem 0;
    border-radius: 8px;
    overflow: hidden;
    background: var(--color-sidebar-bg);
  }

  .people-section {
    margin-top: 1rem;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .people-avatars-container {
    flex: 1;
  }

  @media (max-width: 768px) {
    .work-header h1 {
      font-size: 2rem;
    }

    .work-meta-header {
      gap: 1rem;
    }

    .work-summary {
      font-size: 1.15rem;
    }
  }
</style>

