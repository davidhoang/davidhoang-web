---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { readFile } from 'fs/promises';
import { join } from 'path';

const workItems = await getCollection('work');

// Page metadata
const pageDescription = "Selected work from my career: design leadership at Atlassian, Replit, Webflow, and One Medical. Product design, team building, and scaling design organizations.";
const ogImage = "/images/img-dh.png";
// Sort by year, newest first (most recent chronologically)
// For date ranges like "2019 to 2023", extract the end year for sorting
workItems.sort((a, b) => {
  const getSortYear = (year: number | string): number => {
    if (typeof year === 'number') return year;
    // Extract the end year from ranges like "2019 to 2023"
    const match = year.match(/(\d{4})\s*$/);
    return match ? parseInt(match[1], 10) : 0;
  };
  return getSortYear(b.data.year) - getSortYear(a.data.year);
});

// Extract images from markdown content for each item
const workItemsWithImages = await Promise.all(
  workItems.map(async (item) => {
    let images: string[] = [];
    try {
      // Read the markdown file directly
      const filePath = join(process.cwd(), 'src', 'content', 'work', `${item.slug}.md`);
      const fileContent = await readFile(filePath, 'utf-8');
      // Extract image URLs from markdown
      const imageRegex = /!\[.*?\]\((.*?)\)/g;
      let match;
      while ((match = imageRegex.exec(fileContent)) !== null) {
        images.push(match[1]);
      }
    } catch (error) {
      // If file reading fails, just use cover image
      console.warn(`Could not read file for ${item.slug}:`, error);
    }
    // Always include cover image as first image
    const allImages = [item.data.coverImage, ...images].filter((img, index, self) => 
      self.indexOf(img) === index // Remove duplicates
    );
    return { ...item, images: allImages };
  })
);
---

<MainLayout title="Work | David Hoang" description={pageDescription} ogImage={ogImage}>
  <div class="container">
    <div class="hero-title">
      <h1>Work</h1>
    </div>
    <div class="work-grid">
      {workItemsWithImages.map((item) => (
        <a href={`/work/${item.slug}`} class="work-item" data-images={JSON.stringify(item.images)}>
          <div class="work-image-container">
            <div class="work-image">
              {item.images.map((img, index) => (
                <img 
                  src={img} 
                  alt={item.data.name} 
                  loading={index === 0 ? "eager" : "lazy"}
                  class={index === 0 ? "active" : ""}
                  data-index={index}
                />
              ))}
            </div>
            <div class="work-title-overlay">
              <span class="work-title-text">{item.data.name}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</MainLayout>

<style>
  .work-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .work-item {
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    margin-bottom: 2rem;
    position: relative;
  }

  .work-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .work-image-container {
    width: 100%;
    aspect-ratio: 16 / 9;
    position: relative;
    overflow: hidden;
    background: var(--color-sidebar-bg);
  }

  .work-image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .work-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.6s ease, transform 0.6s ease;
    transform: scale(1);
  }

  .work-image img.active {
    opacity: 1;
    z-index: 1;
  }

  .work-item:hover .work-image img {
    transform: scale(1.05);
  }

  .work-title-overlay {
    position: absolute;
    top: 0;
    left: 0;
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border-radius: 0 0 12px 0;
    z-index: 2;
    transition: all 0.3s ease;
  }

  .work-title-text {
    font-size: 0.75rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    letter-spacing: 0.02em;
  }

  .work-item:hover .work-title-overlay {
    background: rgba(0, 0, 0, 0.7);
    padding: 1rem 1.25rem;
    border-radius: 0 0 12px 0;
  }

  .work-item:hover .work-title-text {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 1);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .work-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .work-item {
      margin-bottom: 1.5rem;
    }

    .work-title-overlay {
      padding: 0.625rem 0.875rem;
    }

    .work-title-text {
      font-size: 0.7rem;
    }

    .work-item:hover .work-title-overlay {
      padding: 0.875rem 1rem;
    }

    .work-item:hover .work-title-text {
      font-size: 0.85rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .work-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  function initWorkThumbnails() {
    const workItems = document.querySelectorAll('.work-item');
    
    workItems.forEach((item) => {
      const images = item.querySelectorAll('.work-image img');
      if (images.length <= 1) return; // Skip if only one image
      
      let currentIndex = 0;
      let rotationInterval: number | null = null;

      const rotateImages = () => {
        if (images.length <= 1) return;

        // Fade out current image
        const currentImg = images[currentIndex];
        if (currentImg) {
          currentImg.classList.remove('active');
        }

        // Move to next image
        currentIndex = (currentIndex + 1) % images.length;

        // Fade in next image
        const nextImg = images[currentIndex];
        if (nextImg) {
          nextImg.classList.add('active');
        }
      };

      item.addEventListener('mouseenter', () => {
        if (images.length > 1) {
          // Start rotation every 2 seconds
          rotationInterval = setInterval(rotateImages, 2000) as unknown as number;
        }
      });
      
      item.addEventListener('mouseleave', () => {
        if (rotationInterval) {
          clearInterval(rotationInterval);
          rotationInterval = null;
        }
        
        // Reset to first image
        images.forEach((img, index) => {
          if (index === 0) {
            img.classList.add('active');
          } else {
            img.classList.remove('active');
          }
        });
        currentIndex = 0;
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initWorkThumbnails);
  } else {
    initWorkThumbnails();
  }

  // Re-initialize after view transitions
  document.addEventListener('astro:page-load', initWorkThumbnails);
</script>

