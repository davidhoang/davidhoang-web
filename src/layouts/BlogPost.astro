---
import MainLayout from './MainLayout.astro';
import BlogMeta from '../components/BlogMeta.astro';
import { Image } from 'astro:assets';
import SidebarWriting from '../components/SidebarWriting.astro';
import CommentsSection from '../components/CommentsSection.astro';

const { data } = Astro.props;
const { title, description, pubDate } = data;
const coverImage = data.coverImage || data.ogImage;
// Extract slug from pathname (format: /writing/{slug})
const slug = Astro.url.pathname.split('/').pop() || '';
---

<MainLayout title={title}>
  <BlogMeta 
    title={title}
    description={description}
    ogImage={data.ogImage}
    publishDate={pubDate}
    url={Astro.url.pathname}
  />
  <article class="blog-post">
    {coverImage && (
      <div class="hero-section">
        <img src={coverImage} alt={title} />
      </div>
    )}
    <div class="container">
      <div class="content-grid">
        <div class="main-content">
          <h1>{title}</h1>
          <time datetime={pubDate}>
            {new Date(pubDate).toLocaleDateString()}
          </time>
          <div class="prose-content">
            <slot />
          </div>
          <CommentsSection slug={slug} />
        </div>
        <SidebarWriting />
      </div>
    </div>
  </article>
</MainLayout>

<style>
  .hero-section {
    width: 100%;
    margin-bottom: 3rem;
  }

  .hero-section img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 3fr 1fr;
    gap: 3rem;
  }

  .post-image {
    margin: 2rem 0;
  }
  
  .post-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }
  
  time {
    color: #666;
    font-size: 0.9rem;
    display: block;
    margin: 1rem 0;
  }

  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
