---
import MainLayout from './MainLayout.astro';

interface Props {
  title: string;
  pubDate?: Date;
  // Add more frontmatter props as needed
}

const { title, pubDate } = Astro.props;
---

<MainLayout title={title}>
  <article class="prose prose-lg max-w-4xl mx-auto px-4 py-8">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-2">{title}</h1>
      {pubDate && (
        <time class="text-gray-600">
          {pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      )}
    </header>
    
    <div class="prose-content">
      <slot />
    </div>
  </article>
</MainLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  time {
    color: #666;
    display: block;
    margin-bottom: 2rem;
  }
</style> 