---
import MainLayout from './MainLayout.astro';
import BlogMeta from '../components/BlogMeta.astro';
import { Image } from 'astro:assets';
import SidebarWriting from '../components/SidebarWriting.astro';
import CommentsSection from '../components/CommentsSection.astro';

const { data } = Astro.props;
const { title, description, pubDate } = data;
// Only render a hero image when explicitly provided.
// Note: we intentionally do NOT fall back to `ogImage` here so that
// default OG images (e.g. David's portrait) don't render on the page.
const coverImage = data.coverImage;

// Use the post description for MainLayout as well
const pageDescription = description || "An article by David Hoang on design, engineering, AI, and entrepreneurship.";
// For social previews, fall back to a default image when the post doesn't
// provide an OG image. This fallback should NOT affect the rendered hero.
const defaultOgImage = "/images/img-dh.png";
const ogImage = data.ogImage || coverImage || defaultOgImage;
---

<MainLayout title={title} description={pageDescription} ogImage={ogImage}>
  <BlogMeta 
    title={title}
    description={description}
    ogImage={ogImage}
    publishDate={pubDate}
    url={Astro.url.pathname}
  />
  <article class:list={['blog-post', !coverImage && 'blog-post--no-hero']}>
    {coverImage && (
      <div class="hero-section">
        <img src={coverImage} alt={title} />
      </div>
    )}
    <div class="container">
      <div class="content-grid">
        <div class="main-content">
          <h1>{title}</h1>
          <time datetime={pubDate}>
            {new Date(pubDate).toLocaleDateString()}
          </time>
          <div class="prose-content">
            <slot />
          </div>
          <CommentsSection />
        </div>
        <SidebarWriting />
      </div>
    </div>
  </article>
</MainLayout>

<style>
  /*
    The nav is `position: fixed` and visually tall (large padding + border),
    which is fine when a cover image sits at the top, but causes text-only
    posts to start "under" the menu. Add a little clearance only when there's
    no hero image.
  */
  .blog-post--no-hero {
    padding-top: 120px;
  }

  .hero-section {
    width: 100%;
    margin-bottom: 3rem;
  }

  .hero-section img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 3fr 1fr;
    gap: 3rem;
  }

  .post-image {
    margin: 2rem 0;
  }
  
  .post-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }
  
  time {
    color: #666;
    font-size: 0.9rem;
    display: block;
    margin: 1rem 0;
  }

  @media (max-width: 768px) {
    .blog-post--no-hero {
      padding-top: 88px;
    }

    .content-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
